#include <iostream>
#include <cmath>
using namespace std;

int main() {
	setlocale(LC_ALL, "ru");
	const double PI = 3.14159265;
	double n, sumSin = 0, y = 0;
	cout << "Введите n: ";
	cin >> n;
	for (int i = 1; i <= n; i++)
	{
		sumSin += sin(i * PI / 180);
		y += i / sumSin;
	}
	cout << "Ответ: " << y;
}
